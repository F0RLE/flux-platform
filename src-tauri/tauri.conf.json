{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Flux Platform",
    "mainBinaryName": "Flux Platform",
    "version": "0.1.0",
    "identifier": "com.flux.platform",
    "build": {
        "beforeDevCommand": "npm run dev --prefix src",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build --prefix src",
        "frontendDist": "../src/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Flux Platform",
                "width": 1400,
                "height": 900,
                "minWidth": 1000,
                "minHeight": 600,
                "center": true,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": false,
                "visible": true,
                "backgroundColor": "#111015"
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                "default"
            ]
        }
    },
    "bundle": {
        "active": false,
        "targets": [
            "msi",
            "nsis"
        ],
        "resources": [],
        "icon": [
            "icons/icon.ico",
            "icons/icon.png"
        ]
    }
}
